{
  "name": "ipfs-app-loader",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "npm run sw",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "sw": "concurrently \"yarn watch:build\" \"yarn serve\"",
    "watch:build": "chokidar \"./src/**/*\" -c \"yarn build\" --verbose --initial -d 1000",
    "serve": "http-server ./dist -p 3001 --ssl -C certs/cert.pem -K certs/key.pem",
    "serve-info": "You can access the app at https://localhost:3001 and add the certificate to your browser to have the service worker works locally."
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "helia": "^4.2.3",
    "ipns": "^9.1.0",
    "libp2p": "^1.6.1",
    "multiformats": "^13.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chainsafe/libp2p-noise": "^15.0.0",
    "@chainsafe/libp2p-yamux": "^6.0.2",
    "@helia/ipns": "^7.2.2",
    "@helia/unixfs": "^3.0.6",
    "@libp2p/autonat": "^1.0.22",
    "@libp2p/dcutr": "^1.0.22",
    "@libp2p/identify": "^2.0.3",
    "@libp2p/interface": "^1.4.1",
    "@libp2p/kad-dht": "^12.0.18",
    "@libp2p/keychain": "^4.0.16",
    "@libp2p/mplex": "^10.0.25",
    "@libp2p/ping": "^1.0.20",
    "@libp2p/websockets": "^8.0.25",
    "@multiformats/mafmt": "^12.1.6",
    "@multiformats/multiaddr": "^12.3.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vite-pwa/assets-generator": "^0.2.4",
    "@vitejs/plugin-react": "^4.2.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "http-server": "^14.1.1",
    "tsc": "^2.0.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.10",
    "vite-plugin-pwa": "^0.20.0",
    "workbox-core": "^7.1.0",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0"
  },
  "resolutions": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  },
  "packageManager": "yarn@4.3.0"
}
